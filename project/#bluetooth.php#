<?php

  //echo $_GET['command'];
  //if($_GET['command']== 'bluetooth'){

$out = shell_exec("/sbin/hcitool dev");
$a = explode ("\n",$out);
$name ="";
$adr ="";
for($i=0;$i<count($a);$i++){
	if(preg_match('/Devices:/' , $a[$i])){
	$b = explode(":", $a[$i]);
	$name =$b[1];
	$adr ="$b[2]:$b[3]:$b[4]:$b[5]:$b[6]:$b[7]"
	}
}

print "$name, $adr";
?>

